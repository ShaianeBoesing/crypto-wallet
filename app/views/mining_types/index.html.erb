<p style="color: green"><%= notice %></p>

<div id="mining_types">
  <h1>Mining types</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Acronym</th>
        <th colspan="2">Actions</th>
      </tr>
    <thead>
    <tbody>
    <% @mining_types.each do |type| %>
      <tr>
        <td> <%= type.description %> </td>
        <td> <%= type.acronym %> </td>
        <td> <%= link_to 'Show', mining_types_path(type) %> </td>
        <td> <%= link_to 'Edit', edit_mining_type_path(type) %> </td>
        <td> <%= button_to 'Delete', type, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }%> </td>    
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New mining type", new_mining_type_path %>
