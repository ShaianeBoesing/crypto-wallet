<p style="color: green"><%= notice %></p>
<span> Today: <%= date_br %></span>
<span> Yesterday: <%= date_br(Date.today - 1) %></span>
<span> Tomorrow: <%= date_br(Date.tomorrow) %></span>
<h1>Coins</h1>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Acronym</th>
      <th>Image</th>
      <th>Mining Type</th>
      <th colspan="2">Actions</th>
    </tr>
  <thead>
  <tbody>
   <% @coins.each do |coin| %>
    <tr>
      <td> <%= coin.description %> </td>
      <td> <%= coin.acronym %> </td>
      <td> <%= image_tag coin.url_image , width:25, height:25 if coin.url_image.present?  %> </td>
      <td> <%= coin.mining_type.description %> </td>
      <td> <%= link_to 'Show', coin_path(coin) %> </td>
      <td> <%= link_to 'Edit', edit_coin_path(coin) %> </td>
      <td> <%= button_to 'Delete', coin, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }%> </td>    
    </tr>
   <% end %>
  </tbody>
</table>

<%= link_to "New coin", new_coin_path %>
